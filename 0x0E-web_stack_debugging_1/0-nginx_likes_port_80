#!/usr/bin/env bash
# server nginx debugging
sudo sed -i 's/listen 8080 default_server;/listen *:80;/' /etc/nginx/sites-enabled/default
sudo sed -i '22s/.*/;/' /etc/nginx/sites-enabled/default
sudo sed -i 's/listen 8080 default_server;/listen *:80;/' /etc/nginx/sites-available/default
sudo sed -i '22s/.*/;/' /etc/nginx/sites-available/default
sudo service nginx restart
